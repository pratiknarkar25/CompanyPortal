<div class="container">
<%= link_to 'New Category', new_category_path if policy(Category).create? %>

<% @categories.each do |category| %>
  <div class="list-group">
    <p>
	    <h2><%= link_to "#{category.name}", category_posts_path(category) %></h2>
	    <% if policy(category).edit? %>	
		    <%= link_to 'Edit', edit_category_path(category) %> | 
		    <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %> 
	    <% end %>
    </p>
    <p><%= category.description %></p><hr/>
  </div>
<% end %><br>
</div>